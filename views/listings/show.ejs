<body>
     <div class="container">
  <div class="row justify-content-center">  
    <div class="col-md-8 col-lg-6" style="margin-right: 5rem;">
       
    <h2><%= listing.title %></h2>
<div class="card listing-card" style="width: 18rem;">
  <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing-image">
  <div class="card-body">
    <p class="card-text"><br>
      <b>Owned by:</b> <i><%=listing.owner.username %></i> <br>
      <%=listing.description%>
   <br>&#x20B9 <%=listing.price.toLocaleString("en-IN")%>
    <br><%=listing.location%>, <%=listing.country %></p>
    <br>
   <% if(currUser && currUser._id.equals(listing.owner._id)){ %>
    <div class="show-btn">
        <form method="GET" action ="/listings/<%=listing._id %>/edit">
            <button class="btn btn-dark add-btn">Edit</button>
        </form> <br>
        <form method="POST" action ="/listings/<%=listing._id %>/?_method=DELETE">
            <button class="btn btn-dark" >Delete</button>
        </form>
    </div>  
    <% } %>       
  </div>

  <!-- logic for adding a review -->
    <% if(currUser){ %>
      <div class="review mb-3 mt-3"> 
          <hr>
        <h4>Leave a review</h4>
        <form method="POST" action="/listings/<%=listing._id %>/review" class="needs-validation" novalidate>
          <div class="mb-1 mt-3">
            <label for="rating" class="form-label">Rating:</label>
            <fieldset class="starability-heartbeat" style="text-size: 1rem;">
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
          </div>
          <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Comment:</label>
            <textarea name="review[comment]" id="comment" class="form-control" required></textarea>
                <div class="invalid-feedback">
                      Share your precious review!!
                </div>
          </div>
        
            <button class="btn btn-primary add-btn">Submit Review</button>
         <br><hr>
          </form>
      </div>    
      <% } %>
      
        </div>
  </div>
</div>
      <!-- logic for displaying review -->
 <!-- Logic for displaying reviews -->
<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <h5 class="mb-4"><b>All Reviews</b></h5>

      <% if (listing.reviews.length > 0) { %>
        <div class="row">
          <% for (let review of listing.reviews) { %>
            <div class="col-md-6 mb-4">
              <div class="card h-100 shadow-sm border-0">
                <div class="card-body p-3">
                  <h6 class="card-title text-primary mb-1">
                    <b>@<%= review.author.username %></b>
                  </h6>
                 <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                  <p class="card-text text-dark mb-2">
                    <%= review.comment %>
                  </p>
                  <form method="POST" action="/listings/<%= listing._id %>/review/<%= review._id %>?_method=DELETE">
                    <button class="btn btn-sm btn-outline-danger">
                      <i class="fa-solid fa-trash me-1"></i> Delete
                    </button>
                  </form>
                </div>
              </div>
            </div>
          <% } %>
        </div>
      <% } else { %>
        <div class="text-center py-5 bg-light rounded">
          <p class="text-muted mb-1">No reviews have been posted yet.</p>
          <p class="text-secondary">Be the first to leave a review!</p>
        </div>
      <% } %>
    </div>
  </div>
</div>
      <div class="col-6 offset-2" style="margin-left: 18rem;">
        <h3>Where you will be...</h3>
        <br>
        <div id="map"></div>
        <br><br>
      </div>
    </div>

<script src="/js/map.js"> </script>  

</body>