<% layout("/layouts/boilerplate.ejs") %>

<!-- Error Alert Component -->
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">
      <div class="card shadow border-0 bg-light">
        <div class="card-body p-4">
          <div class="d-flex align-items-start gap-3">
            <!-- Icon -->
            <div class="text-danger flex-shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" fill="currentColor" class="bi bi-exclamation-triangle-fill" viewBox="0 0 16 16">
                <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
              </svg>
            </div>

            <!-- Error Details -->
            <div class="w-100">
              <h5 class="text-danger fw-bold mb-3">Something went wrong</h5>
              <ul class="list-unstyled mb-0">
                <li><strong>Error Name:</strong> <%= err.name %></li>
                <li><strong>Status Code:</strong> <%= status %></li>
                <li><strong>Message:</strong> <%= err.message %></li>
              </ul>
            </div>
          </div>
        </div>
        <div class="card-footer bg-transparent text-end">
          <a href="/listings" class="btn btn-outline-danger btn-sm">Go Back Home</a>
        </div>
      </div>
    </div>
  </div>
</div>
