<% layout('layouts/boilerplate.ejs') %>
<style>
.filters-container {
  display: flex;
  align-items: center;
   text-align: center;
  justify-content: flex-start;
  gap: 1rem;
  padding: 1rem 1rem;
  overflow-x: auto;
  flex-wrap: nowrap;
  max-width: 100%;
  scrollbar-width: none;
}
.filters-container::-webkit-scrollbar {
  display: none;
}

#filters {
  display: flex;
  flex-wrap: nowrap;
  gap: 2rem;
}

#filters a {
  text-decoration: none;
  color: inherit;
}

.filter {
  color: #1248d0;
  text-align: center;
  opacity: 0.5;
  flex: 0 0 auto;
  transition: all 0.3s ease;
}
.filter:hover {
  opacity: 1;
  cursor: pointer;
}
.filter i {
  font-size: 1.5rem;
  transition: transform 1.25s ease;
}
.filter:hover i {
  transform: rotate(360deg) scale(1.3);
}
.filter p {
  font-size: 0.75rem;
  margin-top: 0.25rem;
}
.active-filter {
  opacity: 1 !important;
  color: #ff385c !important;
}
.tax-info{
   display: none;
}

.tax-toggle {
  flex: 0 0 auto;
  display: flex;
  margin-bottom: 1rem;
  margin-left:14rem;
  align-items: center;
  background-color: #f5f5f5;
  border: 1px solid #ccc;
  border-radius: 2rem;
  padding: 0.4rem 1rem;
  white-space: nowrap;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
}

</style>

<div class="filters-container">
  <div id="filters">
    <a href="/listings" class="filter <%= category === 'trending' ? 'active-filter' : '' %>">
      <div><i class="fa-solid fa-fire"></i></div><p>Trending</p>
    </a>
    <a href="/listings?category=rooms" class="filter <%= category === 'rooms' ? 'active-filter' : '' %>">
      <div><i class="fa-solid fa-bed"></i></div><p>Rooms</p>
    </a>
    <a href="/listings?category=iconic cities" class="filter <%= category === 'iconic cities' ? 'active-filter' : '' %>">
      <div><i class="fa-solid fa-mountain-city"></i></div><p>Iconic Cities</p>
    </a>
    <a href="/listings?category=mountains" class="filter <%= category === 'mountains' ? 'active-filter' : '' %>">
      <div><i class="fa-solid fa-mountain"></i></div><p>Mountains</p>
    </a>
    <a href="/listings?category=desert" class="filter <%= category === 'desert' ? 'active-filter' : '' %>">
      <div><i class="fa-solid fa-sun"></i></div><p>Desert</p>
    </a>
    <a href="/listings?category=beach" class="filter <%= category === 'beach' ? 'active-filter' : '' %>">
      <div><i class="fa-solid fa-umbrella-beach"></i></div><p>Beach</p>
    </a>
    <a href="/listings?category=castles" class="filter <%= category === 'castles' ? 'active-filter' : '' %>">
      <div><i class="fa-solid fa-chess-rook"></i></div><p>Castles</p>
    </a>
    <a href="/listings?category=amazing pool" class="filter <%= category === 'amazing pool' ? 'active-filter' : '' %>">
      <div><i class="fa-solid fa-person-swimming"></i></div><p>Amazing Pools</p>
    </a>
    <a href="/listings?category=camping" class="filter <%= category === 'camping' ? 'active-filter' : '' %>">
      <div><i class="fa-solid fa-campground"></i></div><p>Camping</p>
    </a>
    <a href="/listings?category=farms" class="filter <%= category === 'farms' ? 'active-filter' : '' %>">
      <div><i class="fa-solid fa-cow"></i></div><p>Farms</p>
    </a>
    <a href="/listings?category=arctic" class="filter <%= category === 'arctic' ? 'active-filter' : '' %>">
      <div><i class="fa-solid fa-snowflake"></i></div><p>Arctic</p>
    </a>
  </div>

  <!-- Toggle Button -->
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
      <label class="form-check-label" for="switchCheckDefault">Display after taxes</label>
    </div>
  </div>
</div>

<body>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-es- ">
 <%for(let listing of allListings){%>
     <a class="listing" href="/listings/<%=listing._id %>"> 
  <div class="card listing-card">
  <img src="<%=listing.image.url%>" class="card-img-top" alt="Loading please wait..." style="height: 20rem;">
    <div class="card-img-overlay">
  </div>
  <div class="card-body">
     <p class="card-text"><b><%= listing.title %></b>  <br>
        &#x20B9 <%=listing.price.toLocaleString("en-IN")%>  /night 
        <i class="tax-info"> &nbsp;&nbsp;+18% GST</i>
       
    </p>
  </div>
</div>
</a>
 <% }  %>
    </div>
    
</body>
<script>
   let taxSwitch = document.getElementById("switchCheckDefault");
   taxSwitch.addEventListener("click", ()=>{
      let taxInfo = document.getElementsByClassName("tax-info");
      for(info of taxInfo){
         if(info.style.display != "inline"){
            info.style.display = "inline";
         }else{
            info.style.display ="none";
         }
      }
      console.log("Button clicked")
   })
</script>